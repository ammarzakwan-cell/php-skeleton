{
    "require": {
        "php": "^8.2",
        "php-di/php-di": "^6.3",
        "slim/slim": "^4.14",
        "slim/twig-view": "^3.4",
        "slim/psr7": "^1.7",
        "symfony/var-dumper": "^6.3",
        "vlucas/phpdotenv": "^5.6",
        "illuminate/database": "^11.19"
    },
    "autoload": {
        "files": [
            "app/helpers.php"
        ],
        "psr-4": {
            "App\\": "app"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
